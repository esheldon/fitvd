#!/usr/bin/env python

import fitvd
import argparse

parser = argparse.ArgumentParser()
parser.add_argument('--seed', type=int, required=True)
parser.add_argument('--config', required=True)
parser.add_argument('--output', required=True)

parser.add_argument('--fofs', help='optional FoF group file')

parser.add_argument('--blacklist', help='optional blacklist')

parser.add_argument('--show',
                    action='store_true',
                    help='plot images')
parser.add_argument('--save',
                    action='store_true',
                    help='save a plot of images')
parser.add_argument('--start',
                    type=int,
                    help='first FoF group to process')
parser.add_argument('--end',
                    type=int,
                    help='last FoF group to process, inclusive')

parser.add_argument('--model-pars',
                    help=('input model pars when doing flux '
                          'only fitting or using for guesses'))

parser.add_argument('--offsets',
                    help='input model pars when doing flux only fitting')

parser.add_argument('meds', nargs='+')

parser.add_argument('--loglevel',
                    default='info',
                    help='logging level')


def main():
    args = parser.parse_args()

    fitvd.util.setup_logging(args.loglevel)

    processor = fitvd.process.Processor(args)
    processor.go()


if __name__ == '__main__':
    main()
